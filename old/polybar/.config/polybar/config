[colors]
background = #1d1f21
background-wm = #444
background-alt = #2d2d2d
foreground = #d8dee9
foreground-alt = #555
primary = #3c71ea
secondary = #f2e635
alert = #ed0b0b

[bar/bar]
monitor = ${env:MONITOR:LVDS1}
monitor-fallback =
monitor-strict = false
monitor-exact = true
#override-redirect = true
;wm-restack = bspwm
wm-restack = qtile
enable-ipc = true
fixed-center = false
bottom = false
separator =
#dim-value = 1.0

width = 100%
height = 24
offset-x = 0
offset-y = 0
radius = 0.0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding = 0
module-margin-left = 0
module-margin-right = 1

font-0 = Hack:pixelsize=10;
font-1 = JoyPixels:style=Regular:scale=10;

modules-left = qtile xwindow
modules-right = cpu memory battery wifi time

tray-position = right
tray-padding = 1
tray-background = ${colors.background-alt}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = default

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

format-underline =
format-background =
format-padding =

[module/qtile]
type = internal/qtile

label-focused = %name%
label-focused-background = ${colors.background-wm}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

format-underline =
format-background =
format-padding =

; Separator in between workspaces
; label-separator = |

[module/cpu]
type = custom/script
exec = sensors | awk '/Core 0/ {print $3}'
label = "%output%"
interval = 10
format-prefix = "üñ• "

[module/memory]
type = custom/script
exec = free -h | awk '/^Mem:/ {print $3 "/" $2}'
label = "%output%"
interval = 10
format-prefix = "üß† "

[module/wifi]
type = custom/script
exec = grep "^\s*w" /proc/net/wireless | awk '{ print "üì∂",int($3 * 100 / 70)"%" }' ; sed "s/down//;s/up/üåê/" /sys/class/net/e*/operstate
label = "%output%"

[module/battery]
type = custom/script
exec = [ -d /sys/class/power_supply/BAT? ] && acpi -b | awk '{print $3,$4,"("$5")"}' | sed -e 's/,//g' || echo "-"
label = "%output%"
interval = 30
format-prefix = "üîã "

[module/time]
type = custom/script
exec = date '+%d/%m/%Y %H:%M'
label = "%output%"
interval = 5

[settings]
format-foreground =
format-underline = #268bd2
format-background = ${colors.background-alt}
format-padding = 1
format-overline =
format-spacing =
format-margin =
format-offset =
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
