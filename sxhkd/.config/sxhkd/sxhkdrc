#keybindings for programs
super + Return
	$TERMINAL
super + {_,shift} + b
	{$BROWSER,$BROWSER2}
super + n
	$TERMINAL -e nextsync.sh
super + {_,shift} + e
	{$TERMINAL -e neomutt,mailsync}
super + v
	$TERMINAL -e newsboat
super + o
    xournalpp
super + {_,shift} + y
    touch.sh {setup,reset}

#bezel keybindings for X220
XF86TaskPane
    thinkpad-rotate flip
XF86RotateWindows
    thinkpad-rotate left

#media Keybindings
#only working for X220
XF86AudioMute
    sound.sh mut
XF86Audio{LowerVolume,RaiseVolume}
	{sound.sh down 10,sound.sh up 10}
#generic
super + {_,shift} + a
	{$TERMINAL -e pulsemixer,sound.sh mute}
super + {_,shift} + p
	{sound.sh up 10,sound.sh dowm 10}

#menu keybindings
super + {_,shift} + x
	{fin.sh,xkill}
super + {_,shift} + r
    {dmenu_run -i -F -p "Run: ",screen.sh}
super + g
	passmenu -i
