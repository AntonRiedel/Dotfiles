# vim: set ft=i3config:

#i3 config
#This config file uses enviromental variables (defined in ~/.bash_profile) and
#custom scripts (which have to be inside PATH)

##Misc Settings
# Super key
set $mod Mod4
# font for window titles
font pango:Hack 8
# default border style for new windows
default_border pixel 3
default_floating_border none
# restart i3 inplace
bindsym $mod+Shift+r restart
# reboot, shutdown, kill i3 or lock screen
bindsym $mod+x exec --no-startup-id fin.sh

##Shortcuts for window manipulation
# kill focused window
bindsym $mod+Shift+q kill
# change focus
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+h focus left
# move focused window
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+h move left
# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
# change container layout (only using two layout)
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# Use Mouse+$mod to drag floating windows
floating_modifier $mod
# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

##Workspace Settings
# Define names for default workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5

##Status bar settings
bar {
    font pango:hack 10
	status_command i3blocks
	position top
	mode dock
	modifier None
}

##Start applications on launch
exec --no-startup-id nitrogen --restore
exec --no-startup-id compton -c ~/.config/compton.conf
exec --no-startup-id dunst
exec --no-startup-id unclutter --jitter 20 --ignore-scrolling

##Keybindings for programs
bindsym $mod+Return exec $TERMINAL
bindsym $mod+Shift+Return exec $TERMINAL2
bindsym $mod+b exec $BROWSER
bindsym $mod+Shift+b exec $BROWSER2
bindsym $mod+n exec $TERMINAL -e $FILE
bindsym $mod+Shift+n exec $TERMINAL2 -e $FILE2
bindsym $mod+v exec $TERMINAL2 -e newsboat

##Media Keybindings
bindsym $mod+a exec $TERMINAL -e pulsemixer
bindsym $mod+Shift+a exec --no-startup-id sound.sh mute
bindsym $mod+p exec --no-startup-id sound.sh up 10
bindsym $mod+Shift+p exec --no-startup-id sound.sh down 10

##Email Keybindings
bindsym $mod+m exec $TERMINAL -e neomutt
bindsym $mod+Shift+m exec --no-startup-id $HOME/.config/mutt/etc/mailsync.sh

##Menu Keybindings
bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+g exec --no-startup-id passmenu
