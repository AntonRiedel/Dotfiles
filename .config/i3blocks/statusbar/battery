#!/bin/sh
# Give a battery name (e.g. BAT0) as an argument.

case $BLOCK_BUTTON in
    1) /usr/bin/xfce4-power-manager-settings ;;
    3) pgrep -x dunst >/dev/null && notify-send "<b>ğŸ”‹ Battery module:</b>
â›½: no battery
ğŸ”‹: discharging
â™»: stagnant charge
ğŸ”Œ: charging
âš¡: charged" ;;
esac

