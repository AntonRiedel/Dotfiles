"02.init.vim

"Misc
set backspace=indent,eol,start
let mapleader=" "
set clipboard=unnamed
set mouse=a
set encoding=utf-8
set fileformat=unix
set wrap
set linebreak
set autoindent
set nobackup
set noswapfile

" Searching
set ignorecase
set incsearch
set hlsearch

" Spaces and Tabs
set tabstop=4
set expandtab
set softtabstop=4
set shiftwidth=4
set modelines=1

" Folding
set foldenable
set foldmethod=indent
set foldlevelstart=3
