case $BLOCK_BUTTON in
    1) pgrep -x dunst >/dev/null && notify-send "<b>ðŸ”‹ Battery module:</b>
â›½: no battery
ðŸ”‹: discharging
â™»: stagnant charge
ðŸ”Œ: charging
âš¡: charged" ;;
esac

if [ "$(hostname)" == "Mars" ]; then
    BAT="BAT0"
else
    BAT="BAT1"
fi

if [ -d /sys/class/power_supply/$BAT ]; then
    capacity=$(cat /sys/class/power_supply/$BAT/capacity)
    status=$(cat /sys/class/power_supply/$BAT/status)
    wear=$(bc <<< "scale=2; $(cat /sys/class/power_supply/$BAT/charge_full) / $(cat /sys/class/power_supply/$BAT/charge_full_design)")
else
    echo "â›½" || exit
fi

echo $(echo "$status" | sed -e "s/,//g;s/Discharging/ðŸ”‹/;s/Charging/ðŸ”Œ/;s/Unknown/â™»ï¸/;s/Full/âš¡/;s/ 0*/ /g;s/ :/ /g") $(echo "$capacity" | sed -e 's/$/%/') $(echo \($wear\))
