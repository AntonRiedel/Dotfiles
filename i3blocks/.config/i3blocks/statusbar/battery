#! /bin/bash
#################################################################################
#     File Name           :     battery
#     Created By          :     Anton Riedel <anton.riedel@hotmail.com>
#     Creation Date       :     [2019-02-24 11:38]
#     Last Modified       :     [AUTO_UPDATE_BEFORE_SAVE]
#     Description         :     Script for i3blocks (display state of the
#                               Battery)
#################################################################################

case $BLOCK_BUTTON in
    BAT) /usr/bin/xfce4-power-manager-settings ;;
    3) pgrep -x dunst >/dev/null && notify-send "<b>🔋 Battery module:</b>
⛽: no battery
🔋: discharging
♻: stagnant charge
🔌: charging
⚡: charged" ;;
esac

if [ "$(cat /etc/hostname)" == "Mars" ]; then
    BAT="BAT0"
else
    BAT="BAT1"
fi

if [ -d /sys/class/power_supply/$BAT ]; then
    capacity=$(cat /sys/class/power_supply/$BAT/capacity)
    status=$(cat /sys/class/power_supply/$BAT/status)
else
    echo "⛽ no BAT" || exit
fi

echo $(echo "$status" | sed -e "s/,//g;s/Discharging/🔋/;s/Charging/🔌/;s/Unknown/♻️/;s/Full/⚡/;s/ 0*/ /g;s/ :/ /g") $(echo "$capacity" | sed -e 's/$/%/')
