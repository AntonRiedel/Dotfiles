case $BLOCK_BUTTON in
    BAT) /usr/bin/xfce4-power-manager-settings ;;
    3) pgrep -x dunst >/dev/null && notify-send "<b>ğŸ”‹ Battery module:</b>
â›½: no battery
ğŸ”‹: discharging
â™»: stagnant charge
ğŸ”Œ: charging
âš¡: charged" ;;
esac

if [ "$(cat /etc/hostname)" == "Mars" ]; then
    BAT="BAT0"
else
    BAT="BAT1"
fi

if [ -d /sys/class/power_supply/$BAT ]; then
    capacity=$(cat /sys/class/power_supply/$BAT/capacity)
    status=$(cat /sys/class/power_supply/$BAT/status)
else
    echo "â›½ no BAT" || exit
fi

echo $(echo "$status" | sed -e "s/,//g;s/Discharging/ğŸ”‹/;s/Charging/ğŸ”Œ/;s/Unknown/â™»ï¸/;s/Full/âš¡/;s/ 0*/ /g;s/ :/ /g") $(echo "$capacity" | sed -e 's/$/%/')
