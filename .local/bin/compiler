#!/bin/sh

# This script will compile or run another finishing operation on a document. I
# have this script run via vim.
#
# tex files: Compiles to pdf, including bibliography if necessary
# py files: runs via python command
# all others: run `sent` to show a presentation

file=$(readlink -f "$1")
dir=$(dirname "$file")
base="${file%.*}"
shebang=$(sed -n 1p "$file")

cd "$dir" || exit

shebangtest() {
	case "$shebang" in
		\#\!*) "$file" ;;
		*) sent "$file" 2>/dev/null & ;;
	esac
}

case "$file" in
	*\.tex) latexmk "$file" -pdfxe -bibtex-cond;;
    *\.md) pandoc "$file" -o "$base".pdf --pdf-engine=xelatex;;
    *\.html) pandoc "$file" --pdf-engine=xelatex -o "$base".pdf ;;
	*) shebangtest ;;
esac
